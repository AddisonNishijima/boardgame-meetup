<div>
  <div class="well">
    {{#link-to 'games.game' game.id}}
    <h3>{{game.name}}</h3>
    {{/link-to}}
    {{#if currentPlayer.curPlayer}}
      {{#if ownsGame}}
        You own this game!
      {{else}}
        <p>
          <button {{action 'ownGame' game}} class="btn btn-default">I Own This</button>
        </p>
      {{/if}}
    {{/if}}
  </div>
</div>
