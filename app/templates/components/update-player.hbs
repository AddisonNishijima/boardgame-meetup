{{#if updatePlayerShow}}
  <form class='small-form' {{action 'updatePlayer' player on='submit'}}>
    <div class="form-group">
      <label for="name">Name:</label>
      {{input value=name class="form-control" placeholder=player.name}}
    </div>
    <div class="form-group">
      <label for="password">Change password:</label>
      {{input value=password class="form-control" type='password'}}
    </div>
    <div class="form-group">
      <label for="avatar">Change Avatar Image URL:</label>
      {{input value=avatar class="form-control"}}
    </div>
    <button class="button-custom button-inline">Save Updates</button>
  </form>
{{else}}
  <button {{action 'showForm'}} class="button-custom button-inline">Update Profile</button>
{{/if}}
