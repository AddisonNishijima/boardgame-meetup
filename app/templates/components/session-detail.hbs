<div class="outer-box">
  <div class="banner">
    <h1>{{session.title}}</h1>
    <h2>{{moment-format session.date 'LL'}}</h2>
  </div>
  {{!-- <img src="#" alt="This will some day be an image!"> --}}
  <p>
    {{session.info}}
  </p>
  <div class="banner">
    <h2>Players Attending: {{#if currentPlayer.curPlayer}}{{attend-session session=session attendSession='attendSession'}}{{/if}}</h2>
  </div>
  <div class="inner-box">
    <p>
      {{#each session.players_attending as |player|}}
        {{player.username}}
      {{/each}}
    </p>
  </div>
  <div class="banner">
    <h2>Games:</h2>
  </div>
  <div class="inner-box">
    <div class="row">
      <div class="col col-sm-6">
        <h3>Being Brought:</h3>
        <p>
          {{#each session.games_being_brought as |game|}}
            {{game.name }}
          {{/each}}
        </p>
      </div>
      <div class="col col-sm-6">
        <h3>Requested:</h3>
        <p>
          dummy dummy dummy
        </p>
      </div>
    </div>
  </div>
</div>









