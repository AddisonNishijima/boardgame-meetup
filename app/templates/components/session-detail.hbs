<div class="outer-box">
  <div class="banner">
    <h1>{{moment-format session.date 'LL'}}</h1>
    <h2>{{session.title}}</h2>
  </div>
  <img class="session-image" src={{session.image_url}} alt="image for this session">
  <div id="imagetext">
    <p>{{session.info}}</p>
  </div>
  <div class="banner">
    <h2>Players Attending: {{#if currentPlayer.curPlayer}}{{attend-session session=session attendSession='attendSession' unattend='unattend'}}{{/if}}</h2>
  </div>
  <div class="inner-box">
    <p>
      {{#each session.players_attending as |player|}}
        {{player.username}}
      {{/each}}
    </p>
  </div>
  <div class="banner">
    <h2>Games:</h2>
  </div>
  <div class="inner-box">
    <div class="row">
      <div class="col col-sm-6">
        <h3>Being Brought:</h3>
        <p>
          {{#each session.games_being_brought as |game|}}
            <h5>
              {{game.name }}
              <button class="glyphicon glyphicon-remove" {{action 'notBringing' game session}}></button>
            </h5>
          {{/each}}
        </p>
      </div>
      <div class="col col-sm-6">
        <h3>Requested:</h3>
        <p>
          {{#each session.games_requested as |game|}}
            <h5>{{game.name }}</h5>
          {{/each}}
        </p>
      </div>
    </div>
  </div>
</div>









