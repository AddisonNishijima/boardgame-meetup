<button {{action 'toggleForm'}} class="glyphicon glyphicon-pencil"></button>

{{#if isShowingModal}}
  {{#modal-dialog close='toggleForm'
    targetAttachment="center"
    translucentOverlay=true
    container-class="wider"
    }}
    <form class='small-form' {{action 'updateForm1' session on='submit'}}>
      <div class="form-group">
        <label for="date">Session date:</label>
        {{input value=date type='date' class="form-control" placeholder=session.date}}
      </div>
      <div class="form-group">
        <label for="title">Choose a title</label>
        {{input value=title class="form-control" placeholder=session.title maxlength="24"}}
      </div>
      <div class="form-group">
        <label for="info">Additional info:</label>
        {{input value=info class="form-control" placeholder=session.info maxlength="240"}}
      </div>
      <button class="button-custom">Update Session Info</button>
    </form>
  {{/modal-dialog}}
{{/if}}
